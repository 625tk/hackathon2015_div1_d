<script>
function onClickLoad()
{
  $.get(
    'http://192.168.33.10:3000/tweets/more/'+localStorage['last_id'],
    function(data) {
      if(data.length !== 0) {
        data.forEach(function(d) {
          $('div#tweets').prepend(
            '<div class="tweet-item"><div class="col-xs-8 col-md-8 col-sm-8"><pre>' + d.text + '</pre></div><div class="col-xs-4 col-md-4 col-sm-4"><p><button class="ganbare"style="padding: 2px 6px 3px 6px;margin: 0px 0px 10px"><img src="ganbare.svg" width="100" height="100"></button><button class="yasume"style="padding:2px 6px 3px 6px;margin: 0 0 10px"><img src="yasume.svg" width="100" height="100"></button></p></div></div>');
        });
        localStorage['last_id'] = data[data.length-1].id;
      }
    }
  );
};

function onClickSend()
{
  $.ajax({
    type: 'POST',
    url: 'http://192.168.33.10:3000/tweets',
    data: {
      text: $('#tweet').val()
    },
    success: function(data) {
      $('div#tweets').append(data);
      $('#tweet').val('');
      onClickLoad();
    },
    error: function(data) {
      alert('failed to send tweet: '+JSON.stringify(data));
    }
  });
};

function sendReaction(id, type)
{
  $.ajax({
    type: 'POST',
    url: 'http://192.168.33.10:3000/tweets/'+id+'/reaction',
    data: {
      reaction_type: type,
    },
    success: function(data) {
      
    },
    error: function(data) {
      
    }
  });
}

$(document).ready(function(){
  $("button.ganbare").click(function(){
    sendReaction($(this).val(), 1);
  });
  $("button.yasume").click(function(){
    sendReaction($(this).val(), 2);
  });
});
</script>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">logo</a>
      <div class="pull-right">
        <button class="btn btn-default" style="border-radius: 0 0 4px 4px;" onClick="onClickLoad()"><i class="fa fa-refresh"></i></button>
      </div>
    </div>
  </div>
</nav>


<style>
  body {
    background-color: #333;
  }
  
 .tweet-item {
    color: #eee;
    padding: 8px 16px;
  }
  pre{
    color: #eee;
    border: none;
    background-color: #333;
  }


.col-md-8 , .col-md-4, .col-sm-8, .col-sm-4, .col-xs-8, .col-xs-4{
    color: #eee;
    padding: 8px 16px;
    border-top: solid #d43f3a 1px;
  }
